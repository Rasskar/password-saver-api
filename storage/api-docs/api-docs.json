            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Регистрация пользователя",
                "operationId": "registerUserPasswordSaverApi",
                "requestBody": {
                    "description": "Данные для регистрации пользователя",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Имя пользователя, должно быть уникальным",
                                        "type": "string",
                                        "example": "TestName"
                                    },
                                    "email": {
                                        "description": "Email пользователя, должен быть уникальным",
                                        "type": "string",
                                        "example": "test@gmail.com"
                                    },
                                    "password": {
                                        "description": "Пароль должен содержать минимум 8 символов, включать буквы в верхнем и нижнем регистрах, а также цифры",
                                        "type": "string",
                                        "format": "password",
                                        "example": "Test1234"
                                    },
                                    "password_confirmation": {
                                        "description": "Подтверждение пароля должно совпадать с паролем",
                                        "type": "string",
                                        "format": "password",
                                        "example": "Test1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешный ответ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "description": "ID зарегистрированного пользователя",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "description": "Имя пользователя",
                                                    "type": "string",
                                                    "example": "TestName"
                                                },
                                                "email": {
                                                    "description": "Email пользователя",
                                                    "type": "string",
                                                    "example": "test@gmail.com"
                                                },
                                                "token": {
                                                    "description": "Bearer токен для авторизации",
                                                    "type": "string",
                                                    "example": "1|0DNmmQtybPzvK2Gp50HnsGUI3JUp2iXVMunfmlb04cc5aa33"
                                                }
                                            },
                                            "type": "object"
                                        }
